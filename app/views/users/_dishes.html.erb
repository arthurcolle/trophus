<div class="container" style="position: relative; top: 50px">
  <div class="panel panel-default">
    <div class="panel-header container">
      <h4><a href="users/<%= params["id"] %>/show"><%= User.find(params["id"]).name %></a>'s dishes<h4>
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dishes.each do |dish| %>
            <tr>
              <% if dish.image_url != "" %>
                <td><a href="dishes/<%= dish.id %>"><img height="75px" src='<%= dish.image_url %>'></a></td>
              <% else %>
                    <td>
                      <a href="dishes/<%= dish.id %>"><img height="75px" src='<%= dish.image.to_s.gsub('http://s3.amazonaws.com/'+ENV['AWS_BUCKET_NAME']+'/', 'http://'+ENV['AWS_BUCKET_NAME']+'.s3.amazonaws.com/') %>'></a>
                    </td>
              <% end %>
              <td><%= dish.name %></td>
              <td><%= dish.description %></td>
              <td>$<%= dish.price %></td>
                    <% if current_user.customer_id != nil %>

      <td><div style="position: absolute; right: 0px; bottom: 5%">   <%= link_to 'Order', order_dish_path(@dish), method: :post, class: "btn-floating btn-large waves-effect waves-light blue", style: "font-size: 10px" %>
      </div></td>

      <% else %>

        <td> <button class="red" onclick="addStripeInformation({'name':'<%= current_user.name %>','email':'<%= current_user.email %>'});" style="font-size: 15px; border-radius: 20px 20px 20px 20px; width: 70px; font-famiy: Helvetica Neue;">Add Card</button> </td>
      <% end %>

            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

        <div class="panel-footer">
      <%= button_to 'Back', root_path, method: :get, class: "btn btn-success" %>
    </div>

    
  </div>
</div>