<div class="container">
  <div class="panel panel-default">
    <div class="panel-header container">
      <h1><%= User.find(params["id"]).name %>'s dishes</h1>
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dishes.each do |dish| %>
            <tr>
              <td><%= dish.name %></td>
              <td><%= dish.description %></td>
              <td>$<%= dish.price %></td>
              <td><%= link_to 'Order', buy_dish_path(dish) %></td>
              <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
              <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>

          <% @instagram.each do |instagram| %>
            <%= image_tag instagram.images.first.last.url %>
          <% end %>


        </tbody>
      </table>
    </div>

        <div class="panel-footer">
      <%= button_to 'Back', root_path, method: :get, class: "btn btn-success" %>
    </div>

    
  </div>
</div>