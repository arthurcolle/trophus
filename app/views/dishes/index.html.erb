<div class="container">
  <div class="panel panel-default">
    <div class="panel-header container">
      <h1>Listing your dishes</h1>
      <%= button_to "Connect to Instagram", "/oauth/connect" %>
      <%= button_to "See recent user media", "/user_recent_media", method: :get %>
      <%= tag "input", { "type" => "button", "value" => "Select images", "onclick" => "snappy();" } %> 
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dishes.each do |dish| %>
            <tr>
              <td><%= dish.name %></td>
              <td><%= dish.description %></td>
              <td>$<%= dish.price %></td>
              <td><%= link_to 'Show', dish %></td>
              <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
              <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    
    <div class="panel-footer">
      <%= link_to 'New dish', new_dish_path %>
    </div>
  </div>
</div>