
  <div class="panel panel-default" style="margin-top: 10px">
    <div class="panel-header container">
      <h3 style="text-align: center">Listing your dishes  <button style="margin-top: 5px" class="waves-effect btn-large waves-light btn modal-trigger" onclick="instaModal();">Instagram Multicreate</button></h3>


            <% if session[:access_token].nil? %>
        <a href="/oauth/connect">
          <button class="button btn btn-primary" id="instagram-connect" style="position: relative; left: 20%;">
          <i class="fa fa-instagram"></i>
             Connect to Instagram
          </button>
        </a>
        <% end %>

              <span id="spannerbutton">


      </span>
    
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dishes.each do |dish| %>
            <tr>
              <% if dish.image_url != "" %>
                <td><a href="dishes/<%= dish.id %>"><img height="75px" src='<%= dish.image_url %>'></a></td>
              <% else %>
                    <td>
                      <a href="dishes/<%= dish.id %>"><img height="75px" src='<%= dish.image.to_s.gsub('http://s3.amazonaws.com/'+ENV['AWS_BUCKET_NAME']+'/', 'http://'+ENV['AWS_BUCKET_NAME']+'.s3.amazonaws.com/') %>'></a>
                    </td>
              <% end %>
              <td><%= dish.name %></td>
              <td><%= dish.description %></td>
              <td>$<%= dish.price %></td>
              <td><%= link_to 'Show', dish %></td>
              <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
              <td><%= link_to 'Destroy', dish, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="panel-footer">
      <%= link_to 'New dish', new_dish_path %>
    </div>
  </div>