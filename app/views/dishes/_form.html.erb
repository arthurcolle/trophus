      <%= form_for(@dish) do |f|%> 

        <div class="form-group"> 
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div> 
        
        <div class="form-group"> 
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        </div> 

        <div class="form-group"> 
          <%= f.label :price %>
          <%= f.number_field :price, class: "form-control" %>
        </div> 

        <div class="actions"> 
          <%= f.submit :class => "btn btn-success" %>
        </div> 
  
      <% end %>