<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-left">
        <% if current_user.nil? %>
          <li> 
            <%= button_to "Sign up", 
                new_user_registration_path, 
                class: "btn btn-default navbar-btn", method: :get %> 
          </li>  
          
          <li> 
            <%= button_to "Log in", 
            new_user_session_path, 
            class: "btn btn-default navbar-btn", method: :get %> 
          </li>
        
        <% else %>
          <li style="top: 15px; padding: 10px"> Welcome, <%= current_user.name %> </li>

          <li> 
            <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn", method: :delete %>  
          </li>
        <% end %>
      </ul>  
      
      <ul class="nav navbar-nav navbar-right">

        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
        <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
        <li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "Contact", contact_path %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>