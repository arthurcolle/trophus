
<style>
@media screen and (max-width: 480px){ 
	#map-canvas {
		height: 500px;
		width: 100%;
		top: 10px;
	}

	#livefeed {
		background-color: #bdc3c7;
/*		opacity: 0.9;*/
		position: relative;
		float: left;
	}

	#multigo {
		background-color: #bdc3c7;
/*		opacity: 0.9;*/
		position: relative;
		float: right;
	}

	.feeds {
		margin-top: 10px;
	}
}

@media screen and (min-width: 480px){ 
	#map-canvas {
		height: 500px;
		width: 800px;
	}

	#livefeed {
			  background-color: #bdc3c7;
	}

	#multigo {
			  background-color: #bdc3c7;
	}

	.feeds {
	  z-index: 100;
	  position: absolute;
	  left: 100px;
	  top: 20px;
	  display: block;
	  opacity: 0.90
	}

}

</style>


<% if current_user %>

<div class="feeds">
		  <div id="multigo" style="z-index: 400; width: 140px; height: 200px; border-radius: 10px 10px 10px 10px">
	          <div class="upperpart">
	          <span style="text-align: center"><p> People Around You</p></span>
		      	<div class="lowerpart">
		            <% users = User.within(1, :origin => current_user) %>
		            <% users.each {|user| %>
		            <%   if user.dishes.length > 0 and user.id != current_user.id %>
		             		<a class="users" style="margin: 5px 5px 5px 5px; color: #1565c0; text-decoration: none; opacity: 1.0" href="users/<%= user.id %>/show"> <%= user.name %> </a> </br>
		            <% end %>
		            <% } %>
		      	</div>
	          </div>
	      </div>

	      <div id="livefeed" style="z-index: 390; height: 200px; width: 140px; border-radius: 10px 10px 10px 10px">
	        	<div class="upperpart">
	            	<span style="text-align: center"><p> Dishes Around You </p></span>
		            <div class="lowerpart">
			            <% users = User.within(1, :origin => current_user) %>
			            <% users.each {|user| %>
			            <% if user.id != current_user.id %>
			            <% dishes = user.dishes %>
				            <% dishes.each { |dish| %>
				            	<a style="margin: 5px 5px 5px 5px; text-decoration: none; color: #1565c0; opacity: 1.0" href="dishes/<%= dish.id %>"> <%= dish.name %> </a> </br>
				           	<% } %>
			           	<% end %>
			           	<% } %>
			        </div>
				</div>
			</div>

</div>

		<div id="map-canvas"></div>


	<script>
    initialize(<%= current_user.id %>);
    $("#multigo").draggable();
    $("#livefeed").draggable();
    // $("#map-canvas").draggable();
  </script>

<% end %>